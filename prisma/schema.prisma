// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("RAILWAY_DATABASE_URL")
}

model Technology {
  id               String         @id @default(cuid())
  name             String         
  value            String         
  jobs             Job[]          @relation("jobTechnologies")
}


model Job {
  id               String         @id @default(uuid())
  position         String   
  role             String
  level            String
  location         String
  contractType     String
  technologies     Technology[]   @relation("jobTechnologies")
  company          Company        @relation(fields: [companyId], references: [id])
  companyId        String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}




model Company {
  id                String         @id @default(cuid())
  name              String
  logo              String?
  location          String
  adress            String?
  city              String?
  website           String?
  phone_number      String         @db.VarChar(64)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  jobs              Job[]
}
